@model SeekSafe.UserInfo

@{
    Layout = "~/Views/Shared/_OllieHomeLayout.cshtml";
    ViewBag.Title = "EditProfile";
}
<header id="home" class="header">
    <div class="overlay"></div>
    <div id="header-carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="container">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="carousel-caption d-none d-md-block">
                        <div class="container-fluid_b" style="max-height: 550px; overflow-y: auto; max-width:900px">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <h2>My Profile</h2>
                                <div class="form-horizontal">
                                    <h4>User Information</h4>
                                    <hr />

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        User ID
                                        <div>
                                            @Html.TextBoxFor(model => model.userID, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                       ID Number
                                        <div>
                                            @Html.EditorFor(model => model.userIDNum, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.userIDNum, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                       First Name
                                        <div>
                                            @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        Last Name
                                        <div>
                                            @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        Department
                                        <div>
                                            @Html.DropDownListFor(model => model.departmentID, new SelectList(new[]
                                            {
                                                new SelectListItem { Text = "Elementary", Value = "1" },
                                                new SelectListItem { Text = "Junior High School", Value = "2" },
                                                new SelectListItem { Text = "Senior High School", Value = "3" },
                                                new SelectListItem { Text = "College", Value = "4" }
                                            }, "Value", "Text"), "Select Department", new { @class = "form-control", @required = true })
                                            @Html.ValidationMessageFor(model => model.departmentID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        Contact Number
                                        <div>
                                            @Html.EditorFor(model => model.contactNo, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.contactNo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                       Email
                                        <div>
                                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                       Registered Date
                                        <div>
                                            @{
                                                string formattedDate = Model.registrationDate.ToString("yyyy-MM-dd");
                                            }
                                            <input type="text" class="form-control" value="@formattedDate" readonly />
                                            @Html.ValidationMessageFor(model => model.registrationDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div>
                                            <input type="submit" value="Save" class="btn btn-default" />
                                            <a href="@Url.Action("MyProfile")" class="btn btn-colorful" style="margin-top:5px">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>


