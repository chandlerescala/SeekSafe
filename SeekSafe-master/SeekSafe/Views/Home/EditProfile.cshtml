<script>
    $(document).ready(function () {
        $('#email').rules('add', {
            required: true,
            email: true,
            messages: {
                required: "Email is required.",
                email: "Please enter a valid email address."
            }
        });
    });

    $(document).ready(function () {
        $('#userIDNum').rules('add', {
            required: true,
            digits: true,
            minlength: 8,
            maxlength: 8,
            messages: {
                required: "ID Number is required.",
                digits: "ID Number must contain only digits.",
                minlength: "ID Number must be exactly 8 digits.",
                maxlength: "ID Number must be exactly 8 digits."
            }
        });
    });
</script>


