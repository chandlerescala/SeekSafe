<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SeekSafe</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: linear-gradient(135deg, #6B0F1A 100%, #6B0F1A 10%); 
            margin: 0;  
            padding: 0;
        }
        
        .container-fluid {
            width: 100% !important;
            max-width: 500px !important; 
            margin: 100px auto !important; 
            padding: 20px !important;
            background-color: #fff !important; 
            border-radius: 8px !important;
            box-shadow: 0 0 10px rgba(0, 0, 255, 0.3) !important; 
        }
        textarea {
            resize: vertical;
        }
       
        .btn {
            display: inline-block;
            margin-bottom: 10px; 
            padding: 10px 20px;
            background-color: #007bff; 
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .back-home {
            display: inline-block;
            text-align: left;      
            color: #666; 
            text-decoration: none;
            margin-right: 290px;
            margin-left: 5px;

        }
       
        .forgot-password {
            display: inline-block;
            text-align: right;
            margin-top: 20px; 
            color: #666; 
            text-decoration: none;
        }
       
        header, footer {
            background-color: #052659;
            color: #C1E8FF; 
            padding: 10px 20px;
        }
        
        input[type="text"],
        input[type="number"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 2px solid #6B0F1A;
            border-radius: 5px;
            background-color: transparent;
            color: #000000;
        }
       
        input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
            background-color: #6B0F1A;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
        }

        
        input[type="submit"]:hover{
            background-color: #fd5e5e;
            color: #021024;
        }

        /* Button styles */
        .btn-red  {
            display: inline-block;
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
            background-color: #6B0F1A; 
            color: #fff;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        /* Hover state */
        .btn-red:hover  {
            background-color: #fd5e5e; 
            color: #021024; /* Dark text color on hover */
        }

         /* Button styles */
        .btn-colorful {
            display: inline-block;
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
            background-color: #008080; 
            color: #fff;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        /* Hover state */
        .btn-colorful:hover {
            background-color: #66b2b2; 
            color: #021024; /* Dark text color on hover */
        }
    </style>

</head>


<body>
    @RenderBody()
    @RenderSection("Scripts", required: false)

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>


</html>
