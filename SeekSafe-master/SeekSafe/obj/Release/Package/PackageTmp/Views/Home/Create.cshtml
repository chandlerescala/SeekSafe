@model SeekSafe.UserAccount
@{
    Layout = "~/Views/Shared/_OllieHomeLayout.cshtml";
    ViewBag.Title = "Create";
}

<header id="home" class="header">
    <div class="overlay"></div>
    <div id="header-carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="container">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="carousel-caption d-none d-md-block">
                        <div class="container-fluid_b" style="max-height: 550px; overflow-y: auto;">
                            <h2>Create New Account</h2>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>User Account</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        ID Number
                                        <div>
                                            @Html.EditorFor(model => model.userIDNum, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.userIDNum, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                       Username
                                        <div>
                                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        Password
                                        <div>
                                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password", @required = true, @id = "passwordField" } })
                                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div>
                                            <input type="checkbox" id="showPasswordCheckbox">
                                            <label for="showPasswordCheckbox">Show Password</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                       User Role
                                        <div>
                                            @Html.DropDownListFor(model => model.roleID, new SelectList(new[]
                {
                    new SelectListItem { Text = "Admin", Value = "1" },
                    new SelectListItem { Text = "User", Value = "2" }
                }, "Value", "Text"), "Select Role", new { @class = "form-control", @required = true })
                                            @Html.ValidationMessageFor(model => model.roleID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div>
                                            <input type="submit" value="Create" class="btn btn-default" />
                                            <a href="@Url.Action("ManageUsers")" class="btn-colorful">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const passwordField = document.getElementById("passwordField");
        const confirmPassField = document.getElementById("confirmPassField");
        const showPasswordCheckbox = document.getElementById("showPasswordCheckbox");

        showPasswordCheckbox.addEventListener("change", function() {
            const isChecked = this.checked;
            if (isChecked) {
                // Show passwords
                passwordField.type = "text";
                confirmPassField.type = "text";
            } else {
                // Hide passwords (mask them)
                passwordField.type = "password";
                confirmPassField.type = "password";
            }
        });
    });
</script>

